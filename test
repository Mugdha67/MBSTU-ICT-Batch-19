clc; clear all; close all;

x1 = [1 2 3 4 5];   % first sequence
x2 = [2 2 0 1 1];   % second sequence

N1 = length(x1);
N2 = length(x2);
N = N1 + N2 - 1;    % length of the convolution result

y = zeros(1, N);    % initialize output

% Perform convolution manually
for n = 1:N
    for k = 1:N1
        if (n - k + 1 > 0) && (n - k + 1 <= N2)
            y(n) = y(n) + x1(k) * x2(n - k + 1);
        end
    end
end

disp('Convolution result (without conv function):')
disp(y)

% Optional: plot results
subplot(3,1,1); stem(x1); title('First Sequence'); xlabel('n'); ylabel('Amplitude');
subplot(3,1,2); stem(x2); title('Second Sequence'); xlabel('n'); ylabel('Amplitude');
subplot(3,1,3); stem(y); title('Manual Convolution Output'); xlabel('n'); ylabel('Amplitude');
